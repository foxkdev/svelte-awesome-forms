{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "outDir": "./dist",
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "paths": {
      "svelte-easy-forms": ["src/"],
      "svelte-easy-forms/*": ["src/*"],
      "svelte-easy-forms/validators": ["src/validators"],
      "svelte-easy-forms/validators/*": ["src/validators/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "**/__tests__/*"]
}